---
// -- services section with information from config
import { siteConfig } from '../config/site.config';
import ServiceCard from './service-card';

const { services } = siteConfig;
---

<section id="servicios" class="py-24 bg-gray-50 relative overflow-hidden">
  <!-- background pattern -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: url('data:image/svg+xml,%3Csvg width=\'60\' height=\'60\' viewBox=\'0 0 60 60\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cpath d=\'M54.627 0l.83.828-1.415 1.415L51.8 0h2.827zM5.373 0l-.83.828L5.96 2.243 8.2 0H5.374zM48.97 0l3.657 3.657-1.414 1.414L46.143 0h2.828zM11.03 0L7.372 3.657 8.787 5.07 13.857 0H11.03zm32.284 0L49.8 6.485 48.384 7.9l-7.9-7.9h2.83zM16.686 0L10.2 6.485 11.616 7.9l7.9-7.9h-2.83zM22.344 0L13.858 8.485 15.272 9.9l9.9-9.9h-2.828zM32 0l-3.657 3.657 1.414 1.414L35 0H32zm-6.656 0L16.857 8.485 18.272 9.9l9.9-9.9h-2.828z\' fill=\'%23000000\' fill-opacity=\'1\' fill-rule=\'evenodd\'/%3E%3C/svg%3E');"></div>
  
  <div class="container mx-auto px-4 lg:px-8 relative z-10">
    <!-- section header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 bg-primary-100 text-primary-700 rounded-full px-4 py-2 text-sm font-medium mb-6">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
        Nuestros Servicios
      </div>
      
      <h2 class="text-4xl lg:text-5xl font-display font-bold text-navy mb-6">
        Soluciones <span class="gradient-text">Integrales</span>
      </h2>
      
      <p class="text-lg text-gray-600">
        Ofrecemos productos y servicios de alta calidad en tres líneas de negocio 
        para satisfacer todas las necesidades de tu empresa o proyecto.
      </p>
    </div>
    
    <!-- services grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {services.map((service) => (
        <ServiceCard service={service} client:load />
      ))}
    </div>
    
    <!-- bottom cta -->
    <div class="text-center mt-16">
      <div class="inline-flex flex-col sm:flex-row items-center gap-4 bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
        <div class="text-left">
          <p class="text-gray-600">¿Necesitas una cotización personalizada?</p>
          <p class="font-semibold text-navy">Contáctanos y recibe atención inmediata</p>
        </div>
        <a href="#contacto" class="btn-accent whitespace-nowrap">
          Cotizar Ahora
        </a>
      </div>
    </div>
  </div>
</section>
